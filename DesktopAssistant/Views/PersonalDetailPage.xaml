            <Grid x:Name="itemHero">
                <!--  Gridの列定義  -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>

                <!--  左側の内容  -->
                <StackPanel Grid.Column="0" Margin="10">
                    <TextBlock
                        FontSize="24"
                        FontWeight="Bold"
                        Text="{x:Bind ViewModel.Item.Name}" />
                    <Image
                        Width="200"
                        Height="200"
                        Source="{x:Bind ViewModel.Item.FaceImagePath}"
                        Stretch="Uniform" />
                </StackPanel>

                <!--  右側の内容  -->
                <StackPanel Grid.Column="1" Margin="10">
                    <TextBlock
                        FontSize="18"
                        FontWeight="Bold"
                        Text="見出し・説明" />
                    <TextBlock Margin="0,5,0,15" Text="{x:Bind ViewModel.Item.Description}" />
                    <TextBlock
                        FontSize="18"
                        FontWeight="Bold"
                        Text="プロンプト" />
                    <TextBlock Text="{x:Bind ViewModel.Item.Prompt}" />
                </StackPanel>
            </Grid>
        </ScrollViewer>
